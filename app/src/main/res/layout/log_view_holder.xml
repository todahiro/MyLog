<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/log_textview" android:text="LogText"
            android:layout_weight="3" android:textSize="18sp" android:textStyle="normal"/>
    <TextView
            android:text="DateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/date_textview" android:layout_weight="1"
            android:textAlignment="textEnd" android:textSize="12sp"/>
</LinearLayout>